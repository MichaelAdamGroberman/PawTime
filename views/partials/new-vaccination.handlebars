<form class="card-body vaccination-form">
  <div class="form-group">
    <label for="vaccinationNameInput">Vaccination Name: </label>
    <input type="text" class="form-control" id="vaccinationNameInput" placeholder="Enter vaccination name">
  </div>

  <div class="form-group datetimepicker">
    <label for="vaccinationDateInput" >Vaccination Date: </label>
      <input type="text" class="form-control" id="vaccinationDateInput" placeholder="Enter vaccination date"> 
      <i class="far fa-calendar-alt"></i>
  </div>

  <button type="submit" class="btn btn-primary" id="vaccination-submit">Submit</button>
</form>