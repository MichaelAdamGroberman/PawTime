<div class="pawtime-form-container pawtime-login">
  <div class="pawtime-form-header">Login</div>
  <div class="pawtime-form-body">
    <form class="form login-form">
      <div class="form-row p-2">
        <label for="email-login">Email:</label>
        <input class="form-control" type="text" id="email-login" />
      </div>
      <div class="form-row p-2">
        <label for="password-login">Password:</label>
        <input class="form-control" type="password" id="password-login" />
      </div>
      <div class="form-row p-2">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>

    <a href="/signup">Don't have an account? SIGNUP here...</a>

  </div>
</div>

<script src="./js/login.js"></script>